/* pages/music.wxss */
.audio-src,
.music-item {
  position: relative;
  padding: 10rpx 0;
  width: 100%;
  height: 410rpx;
  background: url(//js.ibaotu.com/revision/img/icon_aubg.png) no-repeat;
  -webkit-background-size: 100% 100%;
  background-size: 100%;
}

.audio-title {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-weight: 30px;
}

.icont-rotate,
.iconz-rotate {
  display: inline-block;
  width: 240rpx;
  height: 240rpx;
  position: relative;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  z-index: 2;
  top: 20rpx;
  left: 230rpx;
}

.iconz-rotate {
  width: 50rpx;
  height: 50rpx;
  background: #ffffff;
  top: -70rpx;
  left: 90rpx;
}

.icon-rotate {
  display: inline-block;
  width: 40px;
  height: 75px;
  position: absolute;
  top: 20rpx;
  right: 170rpx;
  background: url(//js.ibaotu.com/revision/img/icon-rotate.png) no-repeat;
  background-size: cover;
  z-index: 2;
}

.audio-box {
  width: 100%;
  height: 100%;
  padding: 0;
  position: relative;
  z-index: 2;
}

.music-play-btn,
.star-time,
.end-time {
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  z-index: 2;
  width: 24px;
  height: 24px;
}

.star-time {
  top: 50rpx;
  left: 110rpx;
}

.end-time {
  top: 50rpx;
  left: 570rpx;
}

.audio-box .time-bar,
.audio-box .time-bar-img {
  position: relative;
  float: left;
  z-index: 1;
  cursor: pointer;
  width: 355rpx;
  height: 35rpx;
}

.audio-box .time-bar {
  background-color: #999;
  margin-top: 50rpx;
  margin-left: 190rpx;
}

.audio-box .time-bar-img,
.audio-box .time-bar-bg {
  position: absolute;
  top: 0;
  left: 0;
}

.audio-box .time-bar-bg {
  background: #F44336;
  width: 0%;
  height: 100%;
}

.music-playing {
  animation: a 6s steps(200) infinite;
}

@keyframes a {
  0% {
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  }
  to {
  -webkit-transform: rotate(1turn);
  transform: rotate(1turn);
  }
}

